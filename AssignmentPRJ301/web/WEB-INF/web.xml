<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationFilterForStu</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/lecturer/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilterForStu</filter-name>
        <url-pattern>/Student/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LecturerTimeTableController</servlet-name>
        <servlet-class>controller.lecturer.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.lecturer.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAttendanceController</servlet-name>
        <servlet-class>controller.lecturer.TakeAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListByDeptController</servlet-name>
        <servlet-class>controller.lecturer.ListByDept</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeControllerStu</servlet-name>
        <servlet-class>controller.student.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListByDeptStu</servlet-name>
        <servlet-class>controller.student.ListByDept</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StuTimeTableController</servlet-name>
        <servlet-class>controller.student.TimeTableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerTimeTableController</servlet-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/lecturer/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttendanceController</servlet-name>
        <url-pattern>/lecturer/takeattend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListByDeptController</servlet-name>
        <url-pattern>/lecturer/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeControllerStu</servlet-name>
        <url-pattern>/student/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListByDeptStu</servlet-name>
        <url-pattern>/student/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StuTimeTableController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
